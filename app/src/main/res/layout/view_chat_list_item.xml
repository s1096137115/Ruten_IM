<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_alignParentLeft="true"
	android:clickable="true"
	android:focusable="true"
	android:foreground="?android:attr/selectableItemBackground"
	android:background="?android:selectableItemBackground"
	android:paddingBottom="6.0dip"
	android:paddingLeft="10.0dip"
	android:paddingRight="10.0dip"
	android:orientation="horizontal"
	android:minHeight="75dp"
	android:paddingTop="6dip"
	android:gravity="left">
	<ImageView
		android:id="@+id/icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@mipmap/ic_profile"
		android:scaleType="fitXY"
		android:layout_marginTop="0dp"
		android:layout_gravity="center_vertical"/>
	<LinearLayout
		android:id="@+id/linear_layout1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:layout_marginLeft="6dp"
		android:layout_marginTop="0dp">
		<RelativeLayout
			android:id="@+id/relateive_layout1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_gravity="top">
			<TextView
				android:id="@+id/title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:text="TitleName"
				android:textColor="@android:color/black"
				android:gravity="center_horizontal"
				android:textSize="16sp"
				android:orientation="horizontal"
				android:layout_alignParentLeft="true"
				android:layout_centerInParent="true"/>
			<TextView
				android:id="@+id/unread"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:text="99"
				android:textColor="@android:color/holo_red_dark"
				android:gravity="center_horizontal"
				android:textSize="14sp"
				android:orientation="horizontal"
				android:layout_alignParentRight="false"
				android:layout_alignWithParentIfMissing="false"
				android:layout_centerInParent="true"
				android:layout_alignParentLeft="false"
				android:layout_toLeftOf="@+id/datetime"
				android:layout_marginRight="20sp"/>
			<TextView
				android:id="@+id/datetime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:text="2015-10-11\n04:11"
				android:gravity="center_horizontal"
				android:textSize="10sp"
				android:orientation="horizontal"
				android:layout_alignParentRight="true"
				android:layout_centerInParent="true"/>
		</RelativeLayout>
			<TextView
				android:id="@+id/content"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_centerHorizontal="true"
				android:text="Agdddddddddddddddd\nAgdddddddddddddddddddd"
				android:textSize="14sp"
				android:orientation="horizontal"
				android:layout_gravity="top"/>
	</LinearLayout>

</LinearLayout>
